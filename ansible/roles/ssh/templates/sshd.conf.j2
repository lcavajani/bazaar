# Default configuration
{% for option, value in sshd_config.items() %}
{{ option }} {{ value}}
{% endfor %}

{% for key in sshd_host_keys %}
HostKey {{ key }}
{% endfor %}

# Extra configuration
{% if sshd_extra_config is defined %}
{% for option, value in sshd_extra_config.items() %}
{{ option }} {{ value}}
{% endfor %}
{% endif %}

# Allowed users
{% if sshd_allowed_users is defined %}
{% for user in sshd_allowed_users %}
AllowUsers {{ user }}
{% endfor %}
{% endif %}
