---
apiVersion: kubeadm.k8s.io/v1beta2
bootstrapTokens:
- groups:
  - system:bootstrappers:kubeadm:default-node-token
  token: "{{ lookup('file', kubeadm.token) }}"
  ttl: 24h0m0s
  usages:
  - signing
  - authentication
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: {{ (ansible_facts[kubernetes.apiserver.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
  bindPort: 6443
nodeRegistration:
  name: {{ ansible_hostname }}
  taints:
  - effect: NoSchedule
    key: node-role.kubernetes.io/master
---
apiServer:
  certSANs:
  - {{ kubernetes.control_plane_endpoint.split(":")[0] }}
  extraArgs:
    advertise-address: {{ (ansible_facts[kubernetes.apiserver.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    bind-address: {{ (ansible_facts[kubernetes.apiserver.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    enable-admission-plugins: {{ kubernetes.apiserver.admission_plugins }}
{% if kubernetes.apiserver.secret_encryption.enable %}
    encryption-provider-config: {{ kubernetes.apiserver.secret_encryption.path }}
{% endif %}
  timeoutForControlPlane: 8m0s
apiVersion: kubeadm.k8s.io/v1beta2
certificatesDir: /etc/kubernetes/pki
clusterName: {{ kubernetes.cluster_name }}
controlPlaneEndpoint: {{ kubernetes.control_plane_endpoint }}
controllerManager:
  extraArgs:
    address: {{ (ansible_facts[kubernetes.controller_manager.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    bind-address: {{ (ansible_facts[kubernetes.controller_manager.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
dns:
  type: CoreDNS
etcd:
  local:
    dataDir: {{ etcd.data_dir }}
imageRepository: k8s.gcr.io
kind: ClusterConfiguration
kubernetesVersion: v{{ kubernetes.version }}
networking:
  dnsDomain: cluster.local
  podSubnet: {{ pod_subnet_cidr }}
  serviceSubnet: {{ service_subnet_cidr }}
scheduler:
  extraArgs:
    address: {{ (ansible_facts[kubernetes.scheduler.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    bind-address: {{ (ansible_facts[kubernetes.scheduler.listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
useHyperKubeImage: false
{% include "templates/kubelet.yml.j2" %}
{% include "templates/kube_proxy.yml.j2" %}
