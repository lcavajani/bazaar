---
apiVersion: kubeadm.k8s.io/v1beta2
bootstrapTokens:
- groups:
  - system:bootstrappers:kubeadm:default-node-token
  token: {{ token }}
  ttl: 24h0m0s
  usages:
  - signing
  - authentication
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
  bindPort: 6443
nodeRegistration:
  name: {{ ansible_hostname }}
  taints:
  - effect: NoSchedule
    key: node-role.kubernetes.io/master
---
apiServer:
  certSANs:
  - {{ control_plane_endpoint.split(":")[0] }}
  extraArgs:
    advertise-address: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    bind-address: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    enable-admission-plugins: {{ admission_plugins }}
  timeoutForControlPlane: 8m0s
apiVersion: kubeadm.k8s.io/v1beta2
certificatesDir: /etc/kubernetes/pki
clusterName: {{ cluster_name }}
controlPlaneEndpoint: {{ control_plane_endpoint }}
controllerManager:
  extraArgs:
    address: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    bind-address: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
dns:
  type: CoreDNS
etcd:
  local:
    dataDir: /var/lib/etcd
imageRepository: k8s.gcr.io
kind: ClusterConfiguration
kubernetesVersion: v{{ kubernetes_version }}
networking:
  dnsDomain: cluster.local
  podSubnet: {{ pod_subnet_cidr }}
  serviceSubnet: {{ service_subnet }}
scheduler:
  extraArgs:
    address: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
    bind-address: {{ (ansible_facts[apiserver_listen_interface | replace("-", "_")]['ipv4']['address']) | default(ansible_facts['default_ipv4']['address']) }}
useHyperKubeImage: false
{% include "templates/kubelet.yml.j2" %}
